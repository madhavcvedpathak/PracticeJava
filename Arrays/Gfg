//Second Largest
public int getSecondLargest(int[] arr) {
    int first = -1;
    int second = -1;
    for (int num : arr) {
        if (num > first) {
            second = first;
            first = num;
        } else if (num < first && num > second) {
            second = num;
        }
    }
    return second;
}

OR

public int getSecondLargest(int[] arr) {
    Arrays.sort(arr); // Sort in ascending order
    int n = arr.length;
    int largest = arr[n - 1];
    for (int i = n - 2; i >= 0; i--) {
        if (arr[i] < largest) {
            return arr[i];
        }
    }
    return -1; // No second largest found
}